<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="cmeditor">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>cmeditor.model.entity.TipoMapa</class>
		<properties>
			<property name = "hibernate.connection.driver_class" value = "com.mysql.jdbc.Driver"/>
			<property name = "hibernate.connection.url" value = "jdbc:mysql://127.0.0.1:3306/cmtool"/>
			<property name = "hibernate.connection.username" value = "aluno"/>
			<property name = "hibernate.connection.password" value = "aluno"/>
			<property name = "hibernate.hbm2ddl.auto" value = "update"/>
	  	</properties>
	</persistence-unit>
</persistence>
